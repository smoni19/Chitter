<h1><%= @name ? "Hi #{@name}, " : "" %> Welcome to Chitter!</h1>

<% if !@name %>
  <a href="/signup">Sign up</a><br/>
  <a href="/login">Login</a><br/>
<% else %>
  <a href="/logout">Logout</a><br/>
<% end %>

<h1>Peeps</h1>
<ul>
  <% @peeps.each do |peep| %>
    <li><%= "#{peep.get_user_info.username} peeped: #{peep.text}"%></li>
  <% end %>
</ul>

<% if @name %>
  <h1>Peep!</h1>
  <form action="/post_peep" method="post">
    <label for="text">Message:</label>
    <input type="text" name="text" required><br>
    <button type="submit" value="Post peep">Post peep</button>
  </form>
<% end %>
